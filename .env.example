# ========================================
# AI Virtual Assistant - Environment Variables
# ========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# ========================================
# Application Settings
# ========================================
APP_NAME="AI Virtual Assistant"
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-this-to-a-secure-random-key-in-production
LOG_LEVEL=INFO
DEBUG=false

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_assistant
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ========================================
# OpenAI Configuration
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-0125-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ========================================
# Twilio Configuration
# ========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.ngrok.io/webhooks/twilio

# ========================================
# ElevenLabs Configuration
# ========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_DEFAULT_VOICE_ID=
ELEVENLABS_MODEL=eleven_multilingual_v2

# ========================================
# WhatsApp Business API (Optional - Future)
# ========================================
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# ========================================
# Google APIs (Optional - Future)
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# ========================================
# SerpAPI (Optional - Future)
# ========================================
SERPAPI_API_KEY=

# ========================================
# Celery Configuration
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ========================================
# Storage Configuration
# ========================================
AUDIO_STORAGE_PATH=/app/storage/audio
MAX_AUDIO_SIZE_MB=10

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
